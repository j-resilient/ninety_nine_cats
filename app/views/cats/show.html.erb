<main>
    <section class="flex page">
        <div class="centered-box">
            <img src="http://placekitten.com/g/300/300" alt="Cat">
            <h1><%= @current_cat.name %></h1>
            <table>
                <tr>
                    <th>Attribute</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td>Age</td>
                    <td><%= @current_cat.age %></td>
                </tr>
                <tr>
                    <td>Birth Date</td>
                    <td><%= @current_cat.birth_date %></td>
                </tr>
                <tr>
                    <td>Color</td>
                    <td><%= @current_cat.color %></td>
                </tr>
                <tr>
                    <td>Sex</td>
                    <td><%= @current_cat.sex %></td>
                </tr>
            </table>
            <br><br>

            <h1>Requests</h1>
            <table>
                <tr>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                </tr>
                <% @requests.each do |request| %>
                    <tr>
                        <td><%= request.start_date %></td>
                        <td><%= request.end_date %></td>
                        <td><%= request.status %></td>
                        <% if request.pending? %>
                            <td><%= button_to "Approve", approve_or_deny_cat_rental_request_url(request, option: :approve), method: :patch %></td>
                            <td><%= button_to "Deny", approve_or_deny_cat_rental_request_url(request), method: :patch %></td>
                            
                        <% end %>
                    </tr>
                <% end %>
            </table>
        </div>
    </section>
</main>